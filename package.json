{
  "name": "react-yarn-berry-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "./project/**"
    ]
  },
  "scripts": {
    "prettier": "prettier --write --config ../.prettierrc './src/**/*.{ts,tsx}'",
    "lint": "eslint ./project/**/src --ext .ts,.tsx",
    "lint:fix": "eslint --fix ./project/**/src --ext .ts,.tsx",
    "lint:check": "eslint --fix --max-warnings 0 ./project/**/src --ext .ts,.tsx"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
